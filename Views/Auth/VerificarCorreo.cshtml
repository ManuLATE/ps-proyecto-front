@model UserOTP
@{
    ViewData["Title"] = "Verificar correo electrónico";
}

<form asp-action="VerificarCorreo">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="h3 text-center text-danger">Antes de continuar</h1>
            <h5 class="card-card-title text-center mt-4">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Email" style="display: none;" placeholder="Email" value="@(User.Identity?.Name)">
            <div class="form-floating mb-3">
                <input asp-for="Code" placeholder="Código" class="form-control" />
                <label asp-for="Code" class="form-label"></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <p class="card-text small">¿No eres tú? <a asp-action="Salir" asp-controller="Auth">Inicia sesión</a></p>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-danger">Verificar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}